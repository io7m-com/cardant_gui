<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.io7m.cardant_gui.ui.internal.CAGMainView">
  <children>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#onOpenConnect" text="%cardant.file.connect" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#onExitSelected" text="%cardant.file.exit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <TabPane fx:id="mainTabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
      <tabs>
        <Tab text="%cardant.items">
          <content>
            <fx:include source="mainItems.fxml" />
          </content>
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/item-16.png" />
                     </image>
                  </ImageView>
               </graphic>
        </Tab>
        <Tab text="%cardant.locations">
          <content>
            <fx:include source="mainLocations.fxml" />
          </content>
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/location-16.png" />
                     </image>
                  </ImageView>
               </graphic>
        </Tab>
        <Tab text="%cardant.stock">
          <content>
            <fx:include source="mainStock.fxml" />
          </content>
          <graphic>
            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@icons/stock-16.png" />
              </image>
            </ImageView>
          </graphic>
        </Tab>
        <Tab text="%cardant.files">
          <content>
            <fx:include source="mainFiles.fxml" />
          </content>
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/file-16.png" />
                     </image>
                  </ImageView>
               </graphic>
        </Tab>
        <Tab text="%cardant.typePackages">
          <content>
            <fx:include source="mainTypePackages.fxml" />
          </content>
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/package-16.png" />
                     </image>
                  </ImageView>
               </graphic>
        </Tab>
        <Tab text="%cardant.audit">
          <content>
            <fx:include source="mainAudit.fxml" />
          </content>
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/audit-16.png" />
                     </image>
                  </ImageView>
               </graphic>
        </Tab>
      </tabs>
    </TabPane>
    <Separator prefWidth="200.0" />
    <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="32.0">
      <children>
        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" smooth="false">
          <image>
            <Image url="@icon24.png" />
          </image>
          <HBox.margin>
            <Insets left="4.0" />
          </HBox.margin>
        </ImageView>
        <Label fx:id="mainStatusText" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="32.0" HBox.hgrow="ALWAYS">
          <HBox.margin>
            <Insets left="8.0" />
          </HBox.margin>
          <font>
            <Font name="Monospaced Regular" size="12.0" />
          </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <StackPane>
          <HBox.margin>
            <Insets left="8.0" />
          </HBox.margin>
          <children>
            <ProgressBar fx:id="mainProgress" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="24.0" prefWidth="24.0">
              <StackPane.margin>
                <Insets bottom="2.0" />
              </StackPane.margin>
            </ProgressBar>
            <ImageView fx:id="mainError" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@icons/error-32.png" />
              </image>
              <StackPane.margin>
                <Insets bottom="2.0" />
              </StackPane.margin>
            </ImageView>
          </children>
        </StackPane>
      </children>
    </HBox>
  </children>
</VBox>
