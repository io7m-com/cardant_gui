<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.io7m.cardant_gui.ui.internal.CAGMainLocationsView">
  <children>
    <SplitPane dividerPositions="0.5"
               orientation="VERTICAL"
               prefHeight="160.0"
               prefWidth="200.0"
               HBox.hgrow="ALWAYS">
      <items>
        <fx:include source="locationTree.fxml"
                    fx:id="locationTreeView"/>
        <fx:include source="locationDetails.fxml"
                    fx:id="locationDetailsView"/>
      </items>
    </SplitPane>
  </children>
</HBox>
