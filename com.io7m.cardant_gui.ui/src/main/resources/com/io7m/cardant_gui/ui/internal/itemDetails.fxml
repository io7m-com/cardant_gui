                           </children>
                        </GridPane>
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
      </content>
    </Tab>
    <Tab text="%cardant.metadata">
      <content>
            <ScrollPane fitToHeight="true" fitToWidth="true">
               <content>
                  <VBox>
                     <children>
                        <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="32.0">
                           <children>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="metaAdd" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onMetaAddSelected" prefHeight="32.0" prefWidth="32.0">
