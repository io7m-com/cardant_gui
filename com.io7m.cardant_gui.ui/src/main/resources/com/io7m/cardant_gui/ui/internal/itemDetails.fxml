                     </VBox.margin>
                     <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="typeAssign" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onTypeAssignSelected" prefHeight="32.0" prefWidth="32.0">
