                        </Button>
                        <Button fx:id="typeUnassign" layoutX="602.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onTypeUnassignSelected" prefHeight="32.0" prefWidth="32.0">
