                                 <children>
                                    <ImageView fx:id="thumbnail" fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@icons/error-32.png" />
                                       </image>
                                    </ImageView>
                                    <ProgressBar fx:id="thumbnailLoading" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="16.0" prefWidth="64.0" />
