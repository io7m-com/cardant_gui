                                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@icons/meta-remove-32.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <tooltip>
                                    <Tooltip text="%cardant.tooltip.metaRemove" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                        <TableView fx:id="meta" styleClass="metaTable" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="metaColPkg" editable="false" prefWidth="75.0" style="-fx-size: 32;" text="%cardant.package" />
                            <TableColumn fx:id="metaColType" editable="false" prefWidth="75.0" text="%cardant.type" />
                              <TableColumn fx:id="metaColField" editable="false" prefWidth="75.0" text="%cardant.field" />
                              <TableColumn fx:id="metaColValue" editable="false" prefWidth="75.0" text="%cardant.value" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
      </content>
    </Tab>
      <Tab text="%cardant.types">
        <content>
            <VBox>
               <children>
                  <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="32.0">
